---
import './src/styles/global.css';
import Header from '../components/Header.astro';

interface Props {
	// Define any props you want to pass to the layout here
	title: string;
}
const { title } = Astro.props as Props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{ title }</title>
	</head>
	<body class="bg-gray-800 text-gray-100 display flex items-center justify-center">
		<Header/>
		<slot />
	</body>
</html>